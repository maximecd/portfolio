---
import { Image } from 'astro:assets'
import gmm1 from '../../../assets/images/gmm/gmm1.jpg'
import gmm2 from '../../../assets/images/gmm/gmm2.jpg'
import '../../../assets/fonts/audrey.css'
import { fade } from 'astro:transitions'
---

<div class="query-container">
  <div class="container" transition:name="gmm-container">
    <h3>
      Galerie<br />
       Magali<br />
       Martin
    </h3>
    <div class="imgs">
      <Image
        transition:name="gmm-img-1"
        transition:animate={fade({ duration: '4.4s' })}
        src={gmm1}
        alt="Galerie Magali Martin"
      />
      <Image transition:name="gmm-img-2" src={gmm2} alt="Galerie Magali Martin" />
    </div>
  </div>
</div>
<style lang="scss">
  .query-container {
    container-type: inline-size;
    height: 100%;
  }
  .container {
    background-color: #07002c;
    display: flex;
    height: 100%;
    display: flex;
    justify-content: space-between;
    padding: 6.6cqi 5.5cqi;
  }
  h3 {
    font-size: 9cqi;
    line-height: 110%;
    font-family: 'Audrey';
    text-transform: uppercase;
    color: white;
    font-weight: 400;
  }
  img {
    width: 40cqi;
    object-fit: contain;
    height: fit-content;
    box-shadow: 0px 2px 10px 1px rgba(255, 255, 255, 0.1);
  }
  .imgs {
    display: flex;
    flex-direction: column;
    :last-child {
      margin-top: -7cqi;
      margin-left: 4cqi;
    }
    align-self: center;
  }
</style>
