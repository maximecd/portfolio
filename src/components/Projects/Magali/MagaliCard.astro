---
import { Image } from 'astro:assets'
import gmm1 from '../../../assets/images/gmm/gmm1.jpg'
import gmm2 from '../../../assets/images/gmm/gmm2.jpg'
import logo from '../../../assets/images/gmm/logo-gmm.svg'
---

<div class="query-container">
  <div class="container" transition:name="gmm-container">
    <Image src={logo} alt="Magali Martin" class="logo" transition:name="gmm-logo" />
    <div class="imgs">
      <Image transition:name="gmm-img-1" src={gmm1} alt="Galerie Magali Martin" />
      <Image transition:name="gmm-img-2" src={gmm2} alt="Galerie Magali Martin" />
    </div>
  </div>
</div>
<style lang="scss">
  .query-container {
    container-type: inline-size;
    height: 100%;
  }
  .container {
    background: linear-gradient(to bottom, #02000e, #0d0149);

    display: flex;
    height: 100%;
    display: flex;
    justify-content: space-between;
    padding: 6.6cqi 5.5cqi;
  }
  .logo {
    width: 40cqi;
    height: fit-content;
  }

  .imgs {
    display: flex;
    flex-direction: column;
    :last-child {
      margin-top: -7cqi;
      margin-left: 4cqi;
    }
    align-self: center;

    img {
      width: 40cqi;
      object-fit: contain;
      height: fit-content;
      box-shadow: 0px 2px 10px 1px rgba(255, 255, 255, 0.1);
    }
  }
</style>
