<style lang="scss">
  main {
    background-color: var(--clr-white);
    color: var(--clr-text);
  }

  section {
    margin-bottom: 6.4rem;
    @media (min-width: 768px) {
      margin-bottom: 7.6rem;
    }
  }

  h2 {
    font-family: var(--ff-headings);
    font-size: 1.8rem;
    margin-bottom: 1em;
    @media (min-width: 768px) {
      font-size: 3.6rem;
    }
  }

  .hero {
    margin-top: 6.4rem;

    div {
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
    }

    @media (min-width: 768px) {
      display: flex;
      gap: 6.4rem;
    }

    h1 {
      font-family: var(--ff-headings);
      font-size: 3.2rem;
      margin-bottom: 1em;
      line-height: normal;
      & > span {
        display: block;
        color: var(--clr-text-light);
      }

      @media (min-width: 768px) {
        font-size: 4.8rem;
        margin-bottom: 0;
      }
    }

    p:not(:last-child) {
      margin-bottom: 1em;
    }
  }

  .grid-section {
    @media (min-width: 768px) {
      display: grid;
      grid-template-columns: 1fr 34.5rem;
      gap: 6.4rem;
    }
  }

  .past-exp {
    @media (min-width: 768px) {
      order: 1;
    }

    ul {
      list-style: none;
      margin: 0;
      padding: 0;
    }
    h3 {
      font-size: 1.6rem;
      line-height: normal;
      font-weight: 600;
      margin-bottom: 2px;
    }
    h4 {
      font-size: 1.4rem;
      font-weight: 600;
      line-height: normal;
      margin-bottom: 1.6rem;
      color: var(--clr-text-light);
    }
    &__list {
      & > li {
        margin-bottom: 3.2rem;
      }
    }
    &__date {
      line-height: normal;
      color: var(--clr-text-lighter);
      margin-bottom: 2px;
      font-size: 1.2rem;
    }
    p {
      margin-bottom: 1em;
    }
    .techs {
      display: flex;
      flex-wrap: wrap;
      gap: 0.8rem;
      li {
        color: #a3590e;
        font-size: 1.2rem;
        font-weight: 600;
        background-color: rgba(225, 122, 18, 0.12);
        border-radius: 99px;
        padding: 0.4rem 1.2rem;
        line-height: 1.35;
      }
    }
  }

  .about {
    img {
      width: 50%;
      border-radius: 1.2rem;
      margin-bottom: 1em;
    }
    p:not(:last-child) {
      margin-bottom: 1em;
    }
  }

  .contact {
    .grid {
      @media (min-width: 768px) {
        display: grid;
        grid-template-columns: 1fr 34.5rem;
        gap: 6.4rem;
      }
    }

    p {
      margin-bottom: 1em;
    }
    :global(.button-link) {
      margin-bottom: 1em;
    }
    ul {
      padding: 0;
      color: var(--clr-link);
      display: flex;
      flex-direction: column;
      gap: 0.8rem;
      li {
        display: flex;
        gap: 1.2rem;
        list-style-type: none;
        align-items: center;
        svg {
          width: 1.8rem;
          height: 1.8rem;
        }
      }
    }
  }
</style>
