---
import { Image } from 'astro:assets'
import Layout from '../../layouts/Layout.astro'
import gmm1 from '../../assets/images/gmm/gmm1.jpg'
import gmm2 from '../../assets/images/gmm/gmm2.jpg'
import '../../assets/fonts/audrey.css'
import ButtonCircle from '../../components/ButtonCircle.astro'
---

<Layout title="Galerie Magali Martin | Maxime Condaminat - Frontend Developper">
  <main transition:name="gmm-container" style="view-transition-name: gmm-container;">
    <div class="container">
      <ButtonCircle id="back" type="link" href="/" label="Go Back">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-chevron-left"><path d="m15 18-6-6 6-6"></path></svg
        >
      </ButtonCircle>
      <h1>Galerie Magali Martin</h1>
      <div class="imgs">
        <Image src={gmm1} alt="Galerie Magali Martin" />
        <Image src={gmm2} alt="Galerie Magali Martin" />
      </div>
    </div>
  </main>
</Layout>

<style lang="scss">
  .container {
    padding: 2.4rem;
  }
  :global(#back) {
    position: absolute;
    top: 2.4rem;
    left: 2.4rem;
    z-index: 1;
  }

  h1 {
    font-family: 'Audrey';
    color: white;
    text-transform: uppercase;
    font-weight: 400;
    font-size: 4rem;
  }
  main {
    background-color: #07002c;
    min-height: 100vh;
  }
</style>
