---
import { Image } from 'astro:assets'
import Layout from '../../layouts/Layout.astro'
import gmm1 from '../../assets/images/gmm/gmm1.jpg'
import gmm2 from '../../assets/images/gmm/gmm2.jpg'
import '../../assets/fonts/audrey.css'
import ButtonCircle from '../../components/ButtonCircle.astro'
import PageView from '../../components/Projects/PageView.astro'
---

<Layout title="Galerie Magali Martin | Maxime Condaminat - Frontend Developper">
  <PageView>
    <main transition:name="gmm-container" style="view-transition-name: gmm-container;">
      <div class="container">
        <header>
          <ButtonCircle type="link" label="Go Back" href="/">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-chevron-left"><path d="m15 18-6-6 6-6"></path></svg
            >
          </ButtonCircle>
          <span>home</span>
        </header>
        <h1>Galerie Magali Martin</h1>
        <div class="imgs">
          <Image src={gmm1} alt="Galerie Magali Martin" />
          <Image src={gmm2} alt="Galerie Magali Martin" />
        </div>
      </div>
    </main>
  </PageView>
</Layout>

<style lang="scss">
  main {
    background-color: #07002c;
  }
  .container {
    padding: 2.4rem;
  }

  header {
    display: flex;
    align-items: center;
    gap: 1.6rem;
    span {
      color: #eee;
      font-family: var(--ff-headings);
      font-size: 2rem;
      font-weight: bold;
    }
  }

  h1 {
    font-family: 'Audrey';
    color: white;
    text-transform: uppercase;
    font-weight: 400;
    font-size: 4rem;
  }
</style>
